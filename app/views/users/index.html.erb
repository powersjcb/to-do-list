<html>
  <h1>Users</h1>
  <div class="users-list">
    <ul>
      <% @users.each do |user| %>
        <li>
          <%= link_to(user.name, "/users/#{user.id}") %>, <%= user.email %>, UserID: <%= user.id %>, Lists: <%= user.lists.length %>
        </li>
      <% end %>
    </ul>
  </div>
  <h2>Create new user</h2>
  <p><%= render "shared/user_form" %></p>
</html>